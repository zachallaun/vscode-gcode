{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "gcode",
  "scopeName": "source.gcode",
  "foldingStartMarker": "^O([A-Z0-9]{1,4})(?=\\s|$|\\()",
  "foldingStopMarker": "^RTS$",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#sub-programs"
    },
    {
      "include": "#address-alphanumeric"
    },
    {
      "include": "#address-integer"
    },
    {
      "include": "#address-decimal"
    }
  ],
  "repository": {
    "operators": {
      "patterns": [
        {
          "name": "operator.goto.gcode",
          "match": "^GOTO (N\\d{1,5}|N[A-Z][A-Z0-9]{0,4})$"
        },
        {
          "name": "operator.if.gcode",
          "match": "IF\\[.*\\](N\\d{1,5}|N[A-Z][A-Z0-9]{0,4})"
        },
        {
          "name": "operator.comparison.gcode",
          "match": " (LT|LE|EQ|NE|GE|GT) "
        },
        {
          "name": "operator.logical.gcode",
          "match": " (AND|OR|EOR|NOT) "
        },
        {
          "name": "operator.arithmetic.gcode",
          "match": "([\\+\\-\\*\\/])"
        },
        {
          "name": "operator.other.gcode",
          "match": "(SIN|COS|TAN|ATAN|ATAN2|SQRT|ABS|BIN|BCD|ROUND|FIX|DROUND|DFIX|DFUP|MOD)\\[(.*)\\]",
          "captures": {
            "2": {
              "patterns": [
                {
                  "include": "#variables"
                }
              ]
            }
          }
        }
      ]
    },
    "sub-programs": {
      "comment": "Keywords related to sub programs",
      "patterns": [
        {
          "name": "sub.call.gcode",
          "match": "CALL O([A-Z0-9]{1,4}).*"
        },
        {
          "name": "sub.name.gcode",
          "match": "^O([A-Z0-9]{1,4})(?=\\s|$|\\()"
        },
        {
          "name": "sub.end.gcode",
          "match": "^RTS$"
        }
      ]
    },
    "variables": {
      "comment": "Local, common, and system variables",
      "patterns": [
        {
          "name": "var.local.okuma.gcode",
          "match": "([ABCDEFGHIJKLMPQRSTUWXYZ][A-Z][A-Z0-9]{0,2})"
        },
        {
          "name": "var.common.okuma.gcode",
          "match": "VC(\\d{1,4}|\\[(\\d{1,4}|VC\\d{1,4}|[A-Z]{2}[A-Z0-9]{0,2})\\])"
        },
        {
          "name": "var.system.okuma.gcode",
          "match": "V[A-Z][A-Z0-9]{1,4}(\\[.*\\])?"
        },
        {
          "name": "var.local.fanuc.gcode",
          "match": "\\#([1-9]|[12][0-9]|3[0-3])(?!\\d)"
        },
        {
          "name": "var.common.fanuc.gcode",
          "match": "\\#([1-9][0-9]{2}})"
        },
        {
          "name": "var.system.fanuc.gcode",
          "match": "\\#([1-9][0-9]{3})(?!\\d)",
          "captures": {
            "0": {
              "name": "replace.s"
            }
          }
        }
      ]
    },
    "address-alphanumeric": {
      "comment": "A single letter followed by one or more alphanumeric characters",
      "patterns": [
        {
          "name": "word.d.gcode",
          "match": "D([ABC]|\\d+)"
        },
        {
          "name": "word.h.gcode",
          "match": "H([ABC]|\\d+)"
        },
        {
          "name": "word.n.gcode",
          "match": "^(N)(\\d{1,5}|[A-Z][A-Z0-9]{0,4})(?=\\s|$|\\()",
          "captures": {
            "0": {
              "name": "replace.n"
            }
          }
        }
      ]
    },
    "address-integer": {
      "comment": "A single letter followed by an unsigned integer or an expression",
      "patterns": [
        {
          "name": "word.g.gcode",
          "match": "G(\\d{1,3}|(?=\\=))"
        },
        {
          "name": "word.m.gcode",
          "match": "M(\\d{1,3}|(?=\\=))",
          "captures": {
            "0": {
              "name": "replace.m"
            }
          }
        },
        {
          "name": "word.t.gcode",
          "match": "T(\\d+|(?=\\=))",
          "captures": {
            "0": {
              "name": "replace.t"
            }
          }
        }
      ]
    },
    "address-decimal": {
      "comment": "A single letter followed by a signed number, integer or decimal",
      "patterns": [
        {
          "match": "([ABCEFIJKLPQRSUVWXYZ])([\\-\\+]?\\d{0,6}\\.?\\d*|\\.\\d+|(?=\\=))",
          "captures": {
            "0": {
              "patterns": [
                {
                  "name": "word.a.gcode",
                  "match": "A.*",
                  "captures": {
                    "0": {
                      "name": "replace.x"
                    }
                  }
                },
                {
                  "name": "word.b.gcode",
                  "match": "B.*",
                  "captures": {
                    "0": {
                      "name": "replace.y"
                    }
                  }
                },
                {
                  "name": "word.c.gcode",
                  "match": "C.*",
                  "captures": {
                    "0": {
                      "name": "replace.z"
                    }
                  }
                },
                {
                  "name": "word.e.gcode",
                  "match": "E.*"
                },
                {
                  "name": "word.f.gcode",
                  "match": "F.*",
                  "captures": {
                    "0": {
                      "name": "replace.f"
                    }
                  }
                },
                {
                  "name": "word.i.gcode",
                  "match": "I.*",
                  "captures": {
                    "0": {
                      "name": "replace.x"
                    }
                  }
                },
                {
                  "name": "word.j.gcode",
                  "match": "J.*",
                  "captures": {
                    "0": {
                      "name": "replace.y"
                    }
                  }
                },
                {
                  "name": "word.k.gcode",
                  "match": "K.*",
                  "captures": {
                    "0": {
                      "name": "replace.z"
                    }
                  }
                },
                {
                  "name": "word.l.gcode",
                  "match": "L.*"
                },
                {
                  "name": "word.p.gcode",
                  "match": "P.*"
                },
                {
                  "name": "word.q.gcode",
                  "match": "Q.*"
                },
                {
                  "name": "word.r.gcode",
                  "match": "R.*"
                },
                {
                  "name": "word.s.gcode",
                  "match": "S.*",
                  "captures": {
                    "0": {
                      "name": "replace.s"
                    }
                  }
                },
                {
                  "name": "word.u.gcode",
                  "match": "U.*",
                  "captures": {
                    "0": {
                      "name": "replace.x"
                    }
                  }
                },
                {
                  "name": "word.v.gcode",
                  "match": "V.*",
                  "captures": {
                    "0": {
                      "name": "replace.y"
                    }
                  }
                },
                {
                  "name": "word.w.gcode",
                  "match": "W.*",
                  "captures": {
                    "0": {
                      "name": "replace.z"
                    }
                  }
                },
                {
                  "name": "word.x.gcode",
                  "match": "X.*",
                  "captures": {
                    "0": {
                      "name": "replace.x"
                    }
                  }
                },
                {
                  "name": "word.y.gcode",
                  "match": "Y.*",
                  "captures": {
                    "0": {
                      "name": "replace.y"
                    }
                  }
                },
                {
                  "name": "word.z.gcode",
                  "match": "Z.*",
                  "captures": {
                    "0": {
                      "name": "replace.z"
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "replace.comment",
          "begin": "\\(",
          "end": "\\)",
          "contentName": "replace.comment"
        },
        {
          "name": "replace.comment",
          "begin": "\\;",
          "end": "$",
          "contentName": "replace.comment"
        }
      ]
    }
  }
}
